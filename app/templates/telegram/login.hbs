<section class="front-signin">
  <h2>Get going ...</h2>
  <form class="signin" {{action "login" on="submit"}}>
    {{#if isSlowConnection}}
      <div class="alert alert-info">The request seems to be taking more time than usual, please wait.</div>
    {{/if}}
    <div>
      {{input value=username type="text" placeholder="Enter your username ..."}}
    </div>
    <div>
      {{input value=password type="password" placeholder="Enter your password ..."}}
    </div>
    {{#if loginFailed}}
      <div class="alert">Incorrect username or password</div>
    {{/if}}
    <div class="submit clearfix">
      <div>
        <button type="submit">Log in</button>
      </div>
      <ul class="recover-signup clearfix">
        <li>
          <a href="/api/users/auth/twitter">Sign in with Twitter</a>
        </li>
        <li><span>.</span></li>
        <li><a>
          {{#link-to 'telegram.createAccount'}}Sign Up
            {{/link-to}}
          </a>
        </li>
        <li><span>.</span></li>
        <li>
          <a>{{#link-to 'telegram.resetPassword'}}Reset Password{{/link-to}}
          </a>
        </li>
      </ul>
    </div>
  </form>
</section>
