{{render header}}

<div id="page-container" class="username" style="text-align: center; margin-top: -65px; background: none;">
	<section class="logo-sml" style="padding: 10px 0 20px;">
        <img src="../assets/img/tg-logo-sml.png">
        <h1 class="visuallyhidden">Telegram</h1>
    </section>
    <section>
		<div>
			<img {{bind-attr src=imageURL}} alt="User image" style="height: 70px; width: 70px">
		</div>

	</section>
	<section>
		<h3>{{name}}</h3>
	</section>
	<section>
	    {{#if isCurrentUser}}
      <!-- change to follow button component instead -->
	    {{else}}{{#if isFollowed}}
      <button type="submit" class="follow" {{action "unfollow"}}>Unfollow</button>
      {{else}}
	    <button type="submit" class="follow" {{action "follow"}}>Follow</button>
	    {{/if}}{{/if}}
	</section>

    {{outlet}}

</div>
